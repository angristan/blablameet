<%= form_with(model: @meeting, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :cover_picture %>
    <%= form.file_field :cover_picture, accept: 'image/png,image/jpeg,image/jpg', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control', placeholder: "Give your meeting beautiful name" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control', placeholder: "Describe as much as possible the aim of your meeting" %>
  </div>

  <div class="form-group">
    <%= form.label :location %>
    <%= form.text_field :location, class: 'form-control', placeholder: "Paris, France" %>
  </div>

  <div class="form-group">
    <%= form.label :event_date %>
    <%= form.datetime_field :event_date, min: Date.tomorrow, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, min: 0, step: '0.01', value: 0, class: 'form-control' %>
    <small class="form-text text-muted">If it is free, set it to zero!</small>
  </div>

  <div class="form-group">
    <%= form.label :max_attendees %>
    <%= form.number_field :max_attendees, min: 0, step: '1', value: 0, class: 'form-control' %>
    <small class="form-text text-muted">You will be able to change this value later!</small>
  </div>

  <%= form.submit class: 'btn btn-primary' %>
<% end %>
